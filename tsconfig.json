{
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "target": "es2015",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noErrorTruncation": true,
    "lib": [
      "dom",
      "es2015",
      "es2017",
      "es2019"
    ],
    "jsx": "react-jsx"
  }
}